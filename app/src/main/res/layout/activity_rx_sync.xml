<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/rx_sync_save_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/rx_sync_just_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rx_sync_save_tv"
        android:layout_centerHorizontal="true"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/rx_sync_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rx_sync_just_tv"
        android:layout_centerHorizontal="true"
        android:padding="16dp"/>

    <Button
        android:id="@+id/rx_sync_save_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rx_sync_from_tv"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"
        android:padding="6dp"
        android:text="下载"/>

    <ImageView
        android:id="@+id/rx_sync_iv"
        android:layout_width="266dp"
        android:layout_height="266dp"
        android:layout_below="@id/rx_sync_save_bt"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>