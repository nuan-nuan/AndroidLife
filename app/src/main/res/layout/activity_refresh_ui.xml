        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/refresh_ui_run_on_ui_thread_tv"
        style="@style/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
